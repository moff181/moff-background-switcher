<Window x:Class="MoffBackgroundSwitcher.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <StackPanel >


        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="135"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Margin="-3,0,0,0">
                <Bold>Background Directory:</Bold>
            </Label>
            <TextBox Grid.Column="1" Margin="0,5,0,0" x:Name="BackgroundDirectoryInput" VerticalAlignment="Top" />
        </Grid>
        <Button Click="Button_Click">Save</Button>
    </StackPanel>
</Window>
